<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="20dp"
    tools:context=".ModoDeJuego">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="365dp"
        android:layout_height="544dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267">

        <Button
            android:id="@+id/btn_PaseYJuegue"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:background="@drawable/paseyjuegue"
            android:onClick="btnRuleta" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btn_Practica"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="@drawable/entrenamiento"
            android:onClick="btnQLocal" />

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btn_Multijugador"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="@drawable/desac" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="102dp"
        android:layout_height="91dp"
        android:onClick="btn_Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992"
        app:srcCompat="@drawable/atras" />

</androidx.constraintlayout.widget.ConstraintLayout>